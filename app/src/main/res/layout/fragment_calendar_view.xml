<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.arkapp.gyanvatika.ui.home.calendarView.CalendarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.applikeysolutions.cosmocalendar.view.CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:orientation="horizontal"
            app:monthTextColor="@color/colorAccent"
            app:weekDayTitleTextColor="@color/colorPrimary"
            app:currentDayTextColor="@color/colorPrimaryDark"
            app:selectedDayTextColor="@color/colorPrimaryDark"
            app:weekendDayTextColor="@android:color/holo_red_light"
            app:dayTextColor="@android:color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>